<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>User Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="../public/css/user.css">
</head>
<body>
    <table class="text-center bg-dark text-white fw-bold w-100">
        <thead>
          <tr>
            <th>Full Name</th>
            <th>Email Address</th>
            <th>Mobile</th>
            <th>Account Status</th>
          </tr>
        </thead>
        <tbody>
          <% r.forEach(course => { %>
            <tr>
              <td><%= course.fullName %></td>
              <td><%= course.email %></td>
              <td><%= course.mobile %></td>
              <td><form action="/editattempts" method="post">
                <input type="hidden" name="email" value="<%= course.email %>">
                <input type="number" name="attempts" placeholder="Enter Number of attempts" required>
                <button type="submit" class="btn btn-primary">Edit Login Attempts</button>
            </form></td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    <%- include('../partials/footer.ejs') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>